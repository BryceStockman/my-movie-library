<head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' type='text/css' href='/assets/css/style.css' />
    <link rel='stylesheet' type='text/css' href='/assets/css/output.css' />

    {{!
    <script src="https://cdn.tailwindcss.com"></script> }}
    <link rel='stylesheet' type='text/css' href='/assets/css/search.css' />
</head>

<body>
    <nav class="navbar w-full">
        <h1>My Movie Library</h1>

        <ul>
            <!-- Add link to search html page-->
            <li>
                <a href="/search">Search for a Movie</a>
            </li>
            <li>
                <a>Login</a>
            </li>
        </ul>
    </nav>

    <h2 class="section-title section-border">To Watch</h2>

    <div class='flex flex-wrap justify-center items-center' id='movie-display'>
        {{#each to_watch}}
        <div class="mx-auto justify-center movie sm:h-400 lg:h-500 w-375 text-center">
            <img class="mx-auto sm:h-1/2 md:h-5/6 lg:h-5/6 w-5/6" src={{Poster}}>

        </div>

        {{/each}}
    </div>

    <h2 class="section-title section-border">Watched</h2>

    <div class='flex flex-wrap justify-center items-center' id='movie-display'>
        {{#each watched}}
        <div class="mx-auto justify-center movie sm:h-400 lg:h-500 w-375 text-center">
            <img class="mx-auto sm:h-1/2 md:h-5/6 lg:h-5/6 w-5/6" src={{Poster}}>

        </div>

        {{/each}}
    </div>
</body>


<footer>
    <div class="container">
        <div class="footer-items">Bryce Stockman, Jessica Groves, Kai Whitney, Kayce Heap</div>
        <div class="footer-items">Powered by:
            <ul>
                <li>Tailwind CSS</li>
                <li>The Open Movie Database</li>
            </ul>
        </div>
        <div class="footer-items">
            <script>document.write(/\d{4}/.exec(Date())[0])</script>
        </div>
    </div>
</footer>
<script src="./assets/js/omdb.js"></script>
<script src="./assets/js/delete-btn.js"></script>
